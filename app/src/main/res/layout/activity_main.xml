<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#b9b9b9">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="497dp"
        android:layout_height="215dp"


        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-56dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="@drawable/images"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Lion :"

        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="222dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:textColor="#7aa0ff" />

    <TextView
        android:layout_width="347dp"
        android:layout_height="88dp"
        android:text=" The Lion Is A King Of Animal ,

         It Live In Forests And Eat Meat ."
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="289dp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#ff00ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" * Select Another Animal "
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="392dp"
        android:layout_above="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:textColor="#6fbfff" />

    <RadioGroup
        android:layout_width="173dp"
        android:layout_height="65dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="433dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiger"
            android:textColor="#6f6f6f" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Dog"
            tools:layout_editor_absoluteX="441dp"
            tools:layout_editor_absoluteY="0dp"
            android:textColor="#6f6f6f" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Fox"
            android:textColor="#6f6f6f" />
    </RadioGroup>
</RelativeLayout>
